<div class="container" style="margin-top: 5%;">

  <div class="col-sm-6"> 
    
    <%= form_with(model: item, local: true) do |form| %>
      <% if item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

          <ul>
          <% item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <table class="table"> 
        <tr>
          <th><%= form.label :name %></th>
          <td><%= form.text_field :name, id: :item_name %></td>
        </tr>

      <tr>
        <th><%= form.label :price %></th>
        <td><%= form.number_field :price, id: :item_price %></td>
      </tr>

      <tr>
        <th><%= form.label :amount %></th>
        <td><%= form.number_field :amount, id: :item_amount %></td>
      </tr>

      <tr>
        <th><%= form.label :comment %></th>
        <td><%= form.text_area :comment, id: :item_comment %></td>
      </tr>

      <div class="field">
        <%= form.hidden_field :order, id: :item_order %>
      </div>

      <tr>
        <td colspan="2">
        <%= form.submit :save, :class=>'btn2' %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
