
<div class="ordrers">

<p id="notice"><%= notice %></p>
<div class="h1o">
<h1>Orders</h1>
</div>
<table class="table ordertable">

    <tr>
      <th>Type</th>
      <th>Restaurant</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
 

  
    <% @orders.each do |order| %>
      <tr>
        <td>  <% if order[:order].mtype == 0 %>
                <p>BreakFast</p>
              <% else %>
                <p>Lunch</p>
              <% end %>
        </td>

        <td><%= order[:order].restaurant %></td>
        <td><%= order[:user] %></td>
        <td><%= link_to 'Show', order[:order] %> </td>
        <% if current_user.id==order[:order].user_id %>
        <td><%= link_to 'Edit', edit_order_path(order[:order]) %> </td>   
        <td>
          <%= link_to 'Delete', order_path(order[:order]), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
 
</table>

<h2 style="float:right"><%= link_to 'New Order', new_order_path , id: :n1 %></h2>
</div>
