
<div class="ordrers">

<p id="notice"><%= notice %></p>
<div class="h1o">
<h1>Orders</h1>
</div>
<table class="table ordertable">
  
    <tr>
      <th>Type</th>
      <th>Restaurant</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
 

  
    <% @orders.each do |order| %>
      <tr>
        <td>  <% if order.mtype == 0 %>
                <p>BreakFast</p>
              <% else %>
                <p>Lunch</p>
              <% end %>
        </td>
        <td><%= order.restaurant %></td>
        <td><%= order.user_id %></td>
        <td><%= link_to 'Show', order %> | </td>
        <td><%= link_to 'Edit', edit_order_path(order) %> | </td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
 
</table>

<br>
</div>
<div class="n1">
<h2><%= link_to 'New Order', new_order_path , id: :n1 %></h2>
</div>
